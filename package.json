{
  "name": "crawl-and-search",
  "version": "1.0.0",
  "description": "A CLI tool to crawl documentation sites and create a search index for Upstash Search.",
  "repository": {
    "type": "git",
    "url": "https://github.com/upstash/search-crawler"
  },
  "main": "dist/index.js",
  "type": "module",
  "exports": "./dist/index.js",
  "files": [
    "dist",
    "package.json"
  ],
  "bin": {
    "crawl-and-search": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "crawler",
    "documentation",
    "search",
    "upstash",
    "cli"
  ],
  "author": "alitariksahin",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@upstash/search": "^0.1.2",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
